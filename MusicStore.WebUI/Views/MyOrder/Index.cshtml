@model IEnumerable<MusicStore.Domain.Models.OrderViewModel>
@{ ViewBag.Title = "My Orders"; }

@if (Model.Count() == 0)
{
<h3 class="box-title">You have no order yet!</h3>

}

else

{
    <h2 id="orders">Orders</h2>
    <hr />
<table class="table table-responsive" id="allOrders">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>City</th>
        <th>Zip Code</th>
        <th>Email</th>
        <th>Order Date</th>
        <th>Address</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostalCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @string.Format("{0:MM/dd/yyyy}", item.OrderDate)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
        @Html.ActionLink("Cancel Order", "CancelOrder", new { id = item.OrderId })
    </td>
</tr> 
    }
</table>
}