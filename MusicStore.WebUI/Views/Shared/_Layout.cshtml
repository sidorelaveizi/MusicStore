@using MusicStore.Domain.Entities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")"
          rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/PagedList.css")"
        rel="stylesheet" type="text/css" />*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/" id="app-name">
            <img src="~/Content/Images/logo.png" />
            <span class="hidden-xs">ONLINE MUSIC STORE</span>
            @*<div class="visible-xs">ASP.NET</div>
                <div class="visible-xs">MVC</div>*@
            <div class="visible-xs">MUSIC STORE</div>
            @*<div class="visible-xs">STORE</div>*@
        </a>
        <ul class="nav justify-content-end" id="navlist">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="nav-item">
                @Html.ActionLink("Store", "Index", "Store")
            </li>
            <li><a href="@Url.Content("~/Cart/")">Cart <span>@ViewBag.count</span></a></li>
            <li>

                @Html.ActionLink("Admin", "Login", "Account", new { isAdmin = true }, null)
            </li>

        </ul>
    </nav>
    <span id="line"></span>

    <div class="row panel">
        <div id="genre" @*class="col-sm-3 hidden-xs"*@ class="col-xs-3">
            <div>
                @{Html.RenderAction("GenreMenu", "Store");}
            </div>
        </div>


        <div class="col-xs-8" @*class="col-xs-12 col-sm-8"*@>
            @RenderBody()
        </div>
    </div>

    <footer id="footer" class="panel-footer">
        <p>© @DateTime.Now.Year - My Sport Store Application</p>
    </footer>

</body>
</html>