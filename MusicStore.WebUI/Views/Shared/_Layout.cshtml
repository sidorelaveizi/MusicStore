            {
                foreach (CartLine item in (List<CartLine>)Session["cart"])
                {
                <li><a href="#">@item.Albums.Title (@item.Quantity)</a></li>
                 }
             }*@
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Account">Admin</a>
            </li>
        </ul>
    </nav>
    <span id="header"></span>

    <div class="row panel">
           
            <div id="genre" class="col-xs-3">
                <div>
                    @{Html.RenderAction("GenreMenu", "Store");}
                </div>        
            </div>
            

            <div class="col-xs-8">   
                @RenderBody()
            </div>
    </div>


    <footer id="footer" class="panel-footer">
        <p> built with <a href="http://asp.net/mvc">ASP.NET MVC 5</a></p>
